{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "domain:luggage",
                "onlyDependOnLibsWithTags": ["domain:luggage", "domain:shared"]
              },
              {
                "sourceTag": "domain:luggage:api",
                "onlyDependOnLibsWithTags": ["domain:luggage"]
              },
              {"sourceTag":  "domain:boarding", "onlyDependOnLibsWithTags": ["domain:boarding", "domain:luggage:api"]},


              {"sourceTag": "type:api", "onlyDependOnLibsWithTags":  ["type:feature", "type:domain-logic", "type:util", "type:ui"]},
              {"sourceTag":  "type:feature", "onlyDependOnLibsWithTags": ["type:ui", "type:domain-logic", "type:util", "type:api"]},

              {"sourceTag":  "type:ui", "onlyDependOnLibsWithTags": ["type:domain-logic"]},
              {"sourceTag":  "type:domain-logic", "onlyDependOnLibsWithTags": ["type:util"]}
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
